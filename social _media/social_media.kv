<Chatgui>
    FloatLayout:
        ScrollView:

            pos_hint: {'left': 1, 'top': 1}
            size_hint_y: .85
            do_scroll_x: False
            canvas.before:
                Color:
                    rgba: (0.2,0.2,.2,.2)
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                id : ct
                color : 0,0,1,1
                background_color: 0.2, 0.2, 0.2, 1
                size_hint: None, None
                theme_text_color: "Custom"
                size: self.texture_size
    BoxLayout:

        MDTextField:
            id : content
            multiline: True
            hint_text: " message text"
            pos_hint: {"center_x":0.7,"center_y":0.1}
        MDIconButton:
            icon: "send"
            pos_hint: {"center_x":0.3,"center_y":0.1}
            on_press : root.msg()